<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- TOP ROW: avatar + username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/post_profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/default_profile"
                android:clipToOutline="true"
                android:padding="2dp"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/recyclerUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="BuzzBoard User"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- IMAGE -->
        <ImageView
            android:id="@+id/recyclerImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray" />

        <!-- TITLE -->
        <TextView
            android:id="@+id/recyclerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Event title"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/recyclerCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/short_description_of_the_event"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- LOCATION -->
        <TextView
            android:id="@+id/recyclerLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/location"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <!-- DATE / TIME -->
        <TextView
            android:id="@+id/recyclerDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Nov 21, 2025 â€¢ 7:00 PM"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <!-- ACTION ROW: thumbs on left, bee favorite on right -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Thumbs up -->
            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:src="@drawable/ic_thumb_up"
                android:contentDescription="Like"
                app:tint="@android:color/black" />

            <!-- Thumbs down -->
            <ImageButton
                android:id="@+id/btnDislike"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:src="@drawable/ic_thumb_down"
                android:contentDescription="Dislike"
                app:tint="@android:color/black" />

            <!-- spacer pushes bee to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Bee favorite button on the RIGHT -->
            <Button
                android:id="@+id/btnBeeFavorite"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_bee_favorite"
                android:clickable="true"
                android:contentDescription="Favorite"
                android:focusable="true"
                android:gravity="center"
                android:padding="0dp"
                android:stateListAnimator="@null"
                android:text="ðŸ"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
