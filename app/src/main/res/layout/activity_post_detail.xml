<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- ✅ Single child: LinearLayout container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 👤 Publisher Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">


        </LinearLayout>

        <!-- 🖼 Post Image -->
        <ImageView
            android:id="@+id/imgPostDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@color/grey"
            android:contentDescription="@string/post_image" />

        <!-- ❤️ Favorite Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_to_favorites"
                android:padding="8dp"
                app:srcCompat="@drawable/baseline_favorite_border_24"
                app:tint="@color/black" />
        </LinearLayout>

        <!-- 📝 Title -->
        <TextView
            android:id="@+id/tvPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/detail_post_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- 📝 Description -->
        <TextView
            android:id="@+id/tvPostDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/detail_description"
            android:textSize="15sp"
            android:textColor="@color/grey" />

        <!-- 📍 Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/detail_location"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <!-- ⏰ Date & Time -->
        <TextView
            android:id="@+id/tvPostDetailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/detail_datetime"
            android:textSize="14sp"
            android:textColor="@color/grey" />

    </LinearLayout>
</ScrollView>
